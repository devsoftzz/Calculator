<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backy"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="4"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TableRow>
            <Button
                android:id="@+id/clear"
                android:text="C"
                android:layout_column="0"
                style="@style/btn"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rnd_btn_red"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/divide"
                android:text="รท"
                android:layout_column="1"
                style="@style/btn"/>
            <ImageButton
                android:id="@+id/multiplication"
                android:src="@drawable/sharp_clear_black_48dp"
                android:layout_column="2"
                style="@style/btn"
                android:padding="10dp"/>
            <ImageButton
                android:id="@+id/back"
                style="@style/btn"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/sharp_backspace_black_48dp"
                />
        </TableRow>

        <!-- Second Row -->
        <TableRow>
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:layout_marginLeft="10dp"
                android:layout_column="0"
                style="@style/btn"/>
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:layout_column="1"
                style="@style/btn"/>
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:layout_column="2"
                style="@style/btn"/>
            <ImageButton
                android:id="@+id/minus"
                android:src="@drawable/sharp_remove_black_48dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_column="3"
                style="@style/btn"/>
        </TableRow>
        <!-- Third Row -->
        <TableRow>
            <Button
                android:id="@+id/four"
                android:text="4"
                android:layout_row="2"
                android:layout_marginLeft="10dp"
                android:layout_column="0"
                style="@style/btn"/>
            <Button
                android:id="@+id/five"
                android:text="5"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/btn"/>
            <Button
                android:id="@+id/six"
                android:text="6"
                android:layout_row="2"
                android:layout_column="2"
                style="@style/btn"/>
            <ImageButton
                android:id="@+id/plus"
                android:src="@drawable/sharp_add_black_48dp"
                android:layout_row="2"
                android:layout_marginRight="10dp"
                android:layout_column="3"
                android:padding="10dp"
                style="@style/btn"/>
        </TableRow>
        <!-- Fourth Row -->
        <TableRow>
            <Button
                android:id="@+id/one"
                android:text="1"
                android:layout_row="3"
                android:layout_marginLeft="10dp"
                android:layout_column="0"
                style="@style/btn"/>
            <Button
                android:id="@+id/two"
                android:text="2"

                android:layout_row="3"
                android:layout_column="1"
                style="@style/btn"/>
            <Button
                android:id="@+id/three"
                android:text="3"
                android:layout_row="3"
                android:layout_column="2"
                style="@style/btn"/>
            <Button
                android:id="@+id/equl"
                android:text="="
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_column="3"
                android:layout_marginRight="10dp"
                style="@style/btn"

                android:background="@drawable/rnd_btn_red"
                android:textColor="#fff"
                />
        </TableRow>
        <!-- fifth row -->
        <TableRow>
            <Button
                android:id="@+id/module"
                android:text="00"
                android:layout_marginLeft="10dp"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/btn"/>
            <Button
                android:id="@+id/zero"
                android:text="0"
                android:layout_row="4"
                android:layout_column="1"
                style="@style/btn"/>
            <Button
                android:id="@+id/dot"
                android:text="."
                android:layout_row="4"
                android:layout_column="2"
                style="@style/btn"
                />
        </TableRow>


    </TableLayout>

</LinearLayout>